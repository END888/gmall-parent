        select bai.id,
        attr_name,
        category_id,
        category_level,
        bav.id vid,
        value_name,
        attr_id
        from base_attr_info bai
        left join base_attr_value bav on bai.id = bav.attr_id
        <where>
            <if test="category1Id != null">
                (category_id = #{category1Id} and category_level = 1) or
            </if>
